{{ 'section-timeline.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
    <div class="page-width">
        {%- if section.settings.heading != blank or section.settings.caption != blank or section.settings.description != blank -%}
            <div class="timeline-section-header {{ section.settings.content_alignment }}">
                {%- if section.settings.heading != blank -%}
                    <h2 class="{{ section.settings.heading_size }}">
                        {{ section.settings.heading }}
                    </h2>
                {%- endif -%}
                
                {%- if section.settings.description != blank -%}
                    <div class="richtext">
                        {{ section.settings.description }}
                    </div>
                {%- endif -%}
            </div>
        {%- endif -%}

        <div class="timeline-wrapper">
            <div class="timeline-line"></div>

            <div class="timeline-line-inner-wrapper">
                {%- for block in section.blocks -%}
                    {%- assign position = block.settings.position -%}
                    
                    <div class="timeline-row {{ position }}" {{ block.shopify_attributes }}>
                        {%- if position == 'left' -%}
                            <div class="timeline-content">
                                <div class="bubble left-bubble">
                                    <div class="timeline-paragraph {{ block.settings.content_alignment }}">
                                                 {%- if block.settings.text != blank -%}
                                        <p>{{ block.settings.text }}</p>
                                    {%- endif -%}
                                        </div>
                           
                                    <div class="bundle_border_wrapper">
                                        <div class="bundle_border"></div>
                                        <div class="bundle_line"></div>
                                    </div>
                                </div>
                            </div>
                        {%- else -%}
                            <div class="timeline-content"></div>
                        {%- endif -%}

                        <div class="timeline-icon">
                            {%- if block.settings.label != blank -%}
                                <span class="timeline-label">{{ block.settings.label }}</span>
                            {%- endif -%}
                            <div class="icon-circle">
                                {%- if block.settings.icon == 'bolt' -%}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M4 14a1 1 0 0 1-.78-1.63l9.9-10.2a.5.5 0 0 1 .86.46l-1.92 6.02A1 1 0 0 0 13 10h7a1 1 0 0 1 .78 1.63l-9.9 10.2a.5.5 0 0 1-.86-.46l1.92-6.02A1 1 0 0 0 11 14z"/>
                                    </svg>
                                {%- elsif block.settings.icon == 'sun' -%}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="4"/>
                                        <path d="M12 2v2"/>
                                        <path d="M12 20v2"/>
                                        <path d="M4.93 4.93l1.41 1.41"/>
                                        <path d="M17.66 17.66l1.41 1.41"/>
                                        <path d="M2 12h2"/>
                                        <path d="M20 12h2"/>
                                    </svg>
                                {%- elsif block.settings.icon == 'chevrons' -%}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="m17 11-5-5-5 5"></path>
                                        <path d="m17 18-5-5-5 5"></path>
                                    </svg>
                                {%- elsif block.settings.icon == 'flame' -%}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 1 1-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 0 0 2.5 2.5z"/>
                                    </svg>
                                {%- elsif block.settings.icon == 'star' -%}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                                    </svg>
                                {%- elsif block.settings.icon == 'check' -%}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M20 6 9 17l-5-5"/>
                                    </svg>
                                {%- elsif block.settings.icon == 'heart' -%}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
                                    </svg>
                                {%- elsif block.settings.icon == 'trophy' -%}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/>
                                        <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/>
                                        <path d="M4 22h16"/>
                                        <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/>
                                        <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/>
                                        <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/>
                                    </svg>
                                {%- endif -%}
                            </div>
                        </div>

                        {%- if position == 'right' -%}
                            <div class="timeline-content">
                                <div class="bubble right-bubble">
                                          <div class="timeline-paragraph {{ block.settings.content_alignment }}">
                                       {%- if block.settings.text != blank -%}
                                        <p>{{ block.settings.text }}</p>
                                    {%- endif -%}
                                        </div>
                                    <div class="bundle_border_wrapper">
                                        <div class="bundle_border"></div>
                                        <div class="bundle_line"></div>
                                    </div>
                                </div>
                            </div>
                        {%- else -%}
                            <div class="timeline-empty"></div>
                        {%- endif -%}
                    </div>
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Timeline",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Our Journey",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra large"
        },
        {
          "value": "hxxl",
          "label": "XX-Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Share your brand story and key milestones with a beautiful timeline</p>",
      "label": "Description"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Content alignment"
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Timeline Item",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Step 1",
          "info": "Short label for timeline milestone"
        },
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "bolt",
              "label": "Bolt"
            },
            {
              "value": "sun",
              "label": "Sun"
            },
            {
              "value": "chevrons",
              "label": "Chevrons Up"
            },
            {
              "value": "flame",
              "label": "Flame"
            },
            {
              "value": "star",
              "label": "Star"
            },
            {
              "value": "check",
              "label": "Check"
            },
            {
              "value": "heart",
              "label": "Heart"
            },
            {
              "value": "trophy",
              "label": "Trophy"
            }
          ],
          "default": "bolt",
          "info": "Select an icon for this timeline item"
        },
        {
          "type": "select",
          "id": "position",
          "label": "Content Position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left",
          "info": "Position of content bubble relative to center line"
        },
            {
      "type": "select",
      "id": "content_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Content alignment"
    },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
          "info": "Main content for this timeline item"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Timeline",
      "settings": {
        "heading": "Our Journey",
        "description": "<p>Share your brand story and key milestones with a beautiful timeline</p>"
      },
     "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}