  <script>
    // Register GSAP ScrollTrigger plugin
    gsap.registerPlugin(ScrollTrigger);

    // Get all text sections and image slides
    const textSections = document.querySelectorAll('.text-section');
    const imageSlides = document.querySelectorAll('.image-slide');
    const dots = document.querySelectorAll('.dot');

    // Function to update active states
    function updateActive(index) {
      // Update images
      imageSlides.forEach((slide, i) => {
        if (i === index) {
          gsap.to(slide, {
            opacity: 1,
            scale: 1,
            duration: 0.8,
            ease: "power2.out"
          });
        } else {
          gsap.to(slide, {
            opacity: 0,
            scale: 0.95,
            duration: 0.8,
            ease: "power2.out"
          });
        }
      });

      // Update dots
      dots.forEach((dot, i) => {
        if (i === index) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });
    }

    // Create ScrollTrigger for each text section
    textSections.forEach((section, index) => {
      ScrollTrigger.create({
        trigger: section,
        start: "top center",
        end: "bottom center",
        onEnter: () => {
          // Animate text section in
          gsap.to(section, {
            opacity: 1,
            x: 0,
            duration: 0.6,
            ease: "power2.out"
          });
          updateActive(index);
        },
        onEnterBack: () => {
          // Animate text section in (scrolling back)
          gsap.to(section, {
            opacity: 1,
            x: 0,
            duration: 0.6,
            ease: "power2.out"
          });
          updateActive(index);
        },
        onLeave: () => {
          // Animate text section out
          gsap.to(section, {
            opacity: 0.3,
            x: -50,
            duration: 0.6,
            ease: "power2.out"
          });
        },
        onLeaveBack: () => {
          // Animate text section out (scrolling back)
          gsap.to(section, {
            opacity: 0.3,
            x: 50,
            duration: 0.6,
            ease: "power2.out"
          });
        }
      });
    });

    // Initial state - show first image
    updateActive(0);

    // Hero section animation
    gsap.from('.hero-content h1', {
      y: 50,
      opacity: 0,
      duration: 1,
      ease: "power3.out"
    });

    gsap.from('.hero-content p', {
      y: 30,
      opacity: 0,
      duration: 1,
      delay: 0.3,
      ease: "power3.out"
    });

    gsap.from('.scroll-arrow', {
      y: 20,
      opacity: 0,
      duration: 1,
      delay: 0.6,
      ease: "power3.out"
    });
  </script>

